<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameMainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/gameTop"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#E4572E"
            android:fontFamily="@font/comicneuebold"
            android:paddingTop="25dp"
            android:text="ASL Buddy"
            android:textAlignment="center"
            android:textColor="#E5FFDE"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/back"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/rounded_nav_button"
            android:clickable="true"
            android:elevation="2dp"
            android:onClick="back"
            android:padding="3dp"
            app:layout_constraintBottom_toBottomOf="@+id/gameTop"
            app:layout_constraintEnd_toEndOf="@+id/gameTop"
            app:layout_constraintHorizontal_bias="0.045"
            app:layout_constraintStart_toStartOf="@+id/gameTop"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/abc_vector_test"
            app:tint="#E5FFDE" />

        <ImageView
            android:id="@+id/home"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/rounded_nav_button"
            android:clickable="true"
            android:elevation="2dp"
            android:onClick="back"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/gameTop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.954"
            app:layout_constraintStart_toStartOf="@+id/gameTop"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/home"
            app:tint="#E5FFDE" />

        <TextView
            android:id="@+id/level1"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_marginTop="348dp"
            android:background="@drawable/rounded_white_border"
            android:clickable="true"
            android:fontFamily="@font/roboto_regular"
            android:onClick="levelOne"
            android:text="Level 1"
            android:textAlignment="viewStart"
            android:textColor="#E5FFDE"
            android:textSize="36sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/gameTop" />

        <TextView
            android:id="@+id/level2"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:alpha="0.2"
            android:background="@drawable/rounded_white_border"
            android:clickable="true"
            android:fontFamily="@font/roboto_regular"
            android:onClick="levelTwo"
            android:text="Level 2"
            android:textAlignment="viewStart"
            android:textColor="#E5FFDE"
            android:textSize="36sp"
            app:layout_constraintBottom_toTopOf="@+id/level1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/gameTop"
            app:layout_constraintVertical_bias="0.92" />

        <TextView
            android:id="@+id/level3"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_marginBottom="22dp"
            android:alpha="0.2"
            android:background="@drawable/rounded_white_border"
            android:clickable="true"
            android:fontFamily="@font/roboto_regular"
            android:onClick="levelThree"
            android:text="Level 3"
            android:textAlignment="viewStart"
            android:textColor="#E5FFDE"
            android:textSize="36sp"
            app:layout_constraintBottom_toTopOf="@+id/level2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/gameTop"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/level1_medal1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="144dp"
            android:alpha="0.2"
            app:layout_constraintBottom_toBottomOf="@+id/level1"
            app:layout_constraintStart_toStartOf="@+id/level1"
            app:layout_constraintTop_toTopOf="@+id/level1"
            app:srcCompat="@drawable/medal" />

        <ImageView
            android:id="@+id/level1_medal3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:alpha="0.2"
            app:layout_constraintBottom_toBottomOf="@+id/level1"
            app:layout_constraintStart_toEndOf="@+id/level1_medal2"
            app:layout_constraintTop_toTopOf="@+id/level1"
            app:srcCompat="@drawable/medal" />

        <ImageView
            android:id="@+id/level1_medal2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:alpha="0.2"
            app:layout_constraintBottom_toBottomOf="@+id/level1"
            app:layout_constraintStart_toEndOf="@+id/level1_medal1"
            app:layout_constraintTop_toTopOf="@+id/level1"
            app:srcCompat="@drawable/medal" />

        <ImageView
            android:id="@+id/level2_medal1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="144dp"
            android:alpha="0.1"
            app:layout_constraintBottom_toBottomOf="@+id/level2"
            app:layout_constraintStart_toStartOf="@+id/level2"
            app:layout_constraintTop_toTopOf="@+id/level2"
            app:srcCompat="@drawable/medal" />

        <ImageView
            android:id="@+id/level2_medal3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:alpha="0.1"
            app:layout_constraintBottom_toBottomOf="@+id/level2"
            app:layout_constraintStart_toEndOf="@+id/level2_medal2"
            app:layout_constraintTop_toTopOf="@+id/level2"
            app:srcCompat="@drawable/medal" />

        <ImageView
            android:id="@+id/level2_medal2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:alpha="0.1"
            app:layout_constraintBottom_toBottomOf="@+id/level2"
            app:layout_constraintStart_toEndOf="@+id/level2_medal1"
            app:layout_constraintTop_toTopOf="@+id/level2"
            app:srcCompat="@drawable/medal" />
        <ImageView
            android:id="@+id/level3_medal1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="144dp"
            android:alpha="0.1"
            app:layout_constraintBottom_toBottomOf="@+id/level3"
            app:layout_constraintStart_toStartOf="@+id/level3"
            app:layout_constraintTop_toTopOf="@+id/level3"
            app:srcCompat="@drawable/medal" />
        <ImageView
            android:id="@+id/level3_medal2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:alpha="0.1"
            app:layout_constraintBottom_toBottomOf="@+id/level3"
            app:layout_constraintStart_toEndOf="@+id/level3_medal1"
            app:layout_constraintTop_toTopOf="@+id/level3"
            app:srcCompat="@drawable/medal" />
        <ImageView
            android:id="@+id/level3_medal3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:alpha="0.1"
            app:layout_constraintBottom_toBottomOf="@+id/level3"
            app:layout_constraintStart_toEndOf="@+id/level3_medal2"
            app:layout_constraintTop_toTopOf="@+id/level3"
            app:srcCompat="@drawable/medal" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>